@model WalkingTec.Mvvm.Demo.ViewModels.MajorVMs.MajorBatchVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <div style="margin-bottom:10px">@Localizer["Sys.BatchEditConfirm"] </div>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="LinkedVM.Remark" />
<wt:combobox field="LinkedVM.SchoolId" items="LinkedVM.AllSchools"/>
<wt:checkbox field="LinkedVM.SelectedStudentMajorsIDs" items="LinkedVM.AllStudentMajorss"/>
</wt:row>
    <wt:hidden field="Ids" />
    <wt:grid vm="ListVM" use-local-data="true" height="300"  hidden-checkbox="true" hidden-panel="true"/>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
