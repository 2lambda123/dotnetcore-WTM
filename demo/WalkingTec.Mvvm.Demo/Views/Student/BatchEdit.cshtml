@model WalkingTec.Mvvm.Demo.ViewModels.StudentVMs.StudentBatchVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <div style="margin-bottom:10px">@Localizer["Sys.BatchEditConfirm"] </div>
    <wt:row items-per-row="ItemsPerRowEnum.Two">
      <wt:textbox field="LinkedVM.Password" />
      <wt:combobox field="LinkedVM.Sex" />
      <wt:textbox field="LinkedVM.ZipCode" />
      <wt:datetime field="LinkedVM.EnRollDate" />

      <wt:checkbox field="LinkedVM.SelectedStudentMajorIDs" items="LinkedVM.AllStudentMajors" />
    </wt:row>
    <wt:hidden field="Ids" />
    <wt:grid vm="ListVM" use-local-data="true" height="300"  hidden-checkbox="true" hidden-panel="true"/>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
