@model WalkingTec.Mvvm.Demo.ViewModels.LinkTest2VMs.LinkTest2VM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
  <wt:row items-per-row="ItemsPerRowEnum.Two">
    <wt:textbox field="Entity.name" />
    <wt:combobox field="SelectedSchool" items="AllSchools" link-field="SelectedMajor" trigger-url="/LinkTest/GetMajorBySchool" />
    <wt:combobox field="SelectedMajor" items="AllMajors" link-field="Entity.LinkStudent[-1].StudentId" trigger-url="/LinkTest/GetStudentByMajor" />
    <wt:combobox field="Entity.LinkStudent[-1].StudentId" items="AllStudents" />
  </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
