@model WalkingTec.Mvvm.Demo.ViewModels.LinkTest2VMs.LinkTest2VM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
  <wt:row items-per-row="ItemsPerRowEnum.Two">
    <wt:textbox field="Entity.name" />
    <wt:tree field="SelectedSchool" multi-select="true" item-url="/LinkTest/GetAllSchools" link-id="aa" trigger-url="/LinkTest/GetMajorBySchool" />
    <wt:combobox field="SelectedMajor" id="aa" link-id="bb" trigger-url="/LinkTest/GetStudentByMajor" />
    <wt:transfer field="Entity.LinkStudent[-1].StudentId" id="bb"/>
  </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
