@model WalkingTec.Mvvm.Demo.ViewModels.LinkTestVMs.LinkTestVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
  <wt:row items-per-row="ItemsPerRowEnum.Two">
    <wt:textbox field="Entity.name" />
    <wt:combobox field="SelectedSchool" multi-select="false" items="AllSchools" link-field="SelectedMajor" trigger-url="/LinkTest/GetMajorBySchool"/>
    <wt:combobox field="SelectedMajor" items="AllMajors" link-field="Entity.StudentId" trigger-url="/LinkTest/GetStudentByMajor"/>
    <wt:combobox field="Entity.StudentId" items="AllStudents" />
  </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
